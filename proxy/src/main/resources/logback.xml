<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender with JSON format for Google Cloud Logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Google Cloud Logging specific fields -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>severity</level>
                <levelValue>[ignore]</levelValue>
            </fieldNames>

            <!-- Include stack traces -->
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>8192</maxLength>
                <shortenedClassNameLength>50</shortenedClassNameLength>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>

            <!-- Add custom fields -->
            <customFields>{"service":"geocoder-proxy"}</customFields>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Adjust log levels for noisy libraries -->
    <logger name="io.ktor" level="INFO"/>
    <logger name="io.ktor.server.plugins.cors.CORS" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
</configuration>
